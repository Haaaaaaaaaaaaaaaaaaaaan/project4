<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bc.dao.mapper.AnswerMapper">
	
	
	<select id="select" parameterType="String" resultType="answer">
		SELECT * FROM ANSWER WHERE ID=#{obj}
	</select>
	<select id="selectall" resultType="answer">
		SELECT * FROM ANSWER
	</select>
	<insert id="insert" parameterType="answer">
		INSERT INTO ANSWER VALUES (ANSWER_ID_SEQ.NEXTVAL,#{regdate},#{author},#{question_id},#{content},#{thumbsup},#{imgname1},#{imgname2},#{imgname3})    
	</insert>
	<update id="update" parameterType="answer">
		UPDATE ANSWER SET REGDATE=#{regdate},AUTHOR=#{author},QUESTION_ID=#{question_id},CONTENT=#{content}, THUMBSUP= #{thumbsup}, IMGNAME1 = #{imgname1}, IMGNAME2 =#{imgname2}, IMGNAME3 = #{imgname3} WHERE ID=#{id}  
	</update>
	<delete id="delete" parameterType="String">
		DELETE FROM ANSWER WHERE ID=#{obj}
	</delete>
	
</mapper>






