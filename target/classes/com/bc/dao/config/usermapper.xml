<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bc.dao.mapper.UserMapper">
	
	
	<select id="select" parameterType="String" resultType="user">
		SELECT * FROM USERS WHERE ID=#{obj}
	</select>
	<select id="selectFind" parameterType="user" resultType="user">
		SELECT * FROM USERS WHERE NAME=#{name} AND EMAIL=#{email}
	</select>
	<select id="selectall" resultType="user">
		SELECT * FROM USERS
	</select>
	<insert id="insert" parameterType="user">
		INSERT INTO USERS VALUES (#{id},#{pwd},#{name},#{gender},#{email},#{regdate},#{admin})
	</insert>
	<update id="update" parameterType="user">
		UPDATE USERS SET PWD=#{pwd},NAME=#{name},GENDER=#{gender},EMAIL=#{email} WHERE ID=#{id}
	</update>
	<delete id="delete" parameterType="String">
		DELETE FROM USERS WHERE ID=#{obj}
	</delete>
	
</mapper>






