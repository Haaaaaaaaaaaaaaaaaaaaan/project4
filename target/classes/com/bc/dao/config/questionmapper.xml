<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bc.dao.mapper.QuestionMapper">
	
	
	<select id="select" parameterType="String" resultType="question">
		SELECT * FROM QUESTION WHERE ID=#{obj}
	</select>
	<select id="selectall" resultType="question">
		SELECT * FROM QUESTION
	</select>
	<insert id="insert" parameterType="question">
		INSERT INTO QUESTION VALUES (QUESTION_ID_SEQ,#{title},#{author},#{thumbsup},#{regdate},#{contents},,#{class_id},#{state},#{imgname1},#{imgname2},#{imgname3})
	</insert>
	<update id="update" parameterType="question">
		UPDATE QUESTION SET TITLE=#{title},AUTHOR=#{author},THUMBSUP=#{thumbsup},REGDATE=#{regdate},CONTENTS=#{contents},CLASS_ID=#{class_id},STATE=#{state},IMGNAME1=#{imgname1},IMGNAME2=#{imgname2},IMGNAME3=#{imgname3} WHERE ID=#{id}
	</update>
	<delete id="delete" parameterType="String">
		DELETE FROM QUESTION WHERE ID=#{obj}
	</delete>
	
</mapper>






